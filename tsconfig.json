{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"experimentalDecorators": true,
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"noEmit": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"strict": true,
		"strictNullChecks": true,
		"target": "ESNext",
		"useDefineForClassFields": false
	},
	"include": [
		"*.js",
		"*.ts"
	]
}
